{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["es2022", "es2020", "es2018", "es2017", "es7", "es6", "es5"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },

  "include": ["src"]
}
